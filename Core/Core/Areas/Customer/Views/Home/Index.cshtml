@model Core.Models.ViewModels.HomeViewModel

@foreach (var category in Model.CategoryList.OrderBy(o => o.DisplayOrder))
{
    @if (Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-primary"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid #008cba;border-radius:5px;background-image:url('/images/leaves.png')">
                                        <div class="pl-3 pt-2 mb-3 text-center">
                                            <h3 class="card-title text-primary"><b>@service.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <div class="pl-3 text-muted">Price</div>
                                            <div class="pr-1 text-danger h5">@service.Price$</div>
                                        </div>
                                        <div style="height:160px" class="d-flex align-items-center">
                                            <img src="@service.ImageUrl" class="card-img-top p-2 rounded" />
                                        </div>
                                        <div class="text-muted text-center pb-2">@service.Frequency.Name</div>
                                        <a asp-action="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@service.Id">
                                            Details
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}
